<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <MessagePopover items="{message>/}" initiallyExpanded="true" activeTitlePress="_activeTitlePress">
        <MessageItem type="{message>type}" title="{message>message}" subtitle="{message>additionalText}" description="{message>description}" activeTitle="{= ${message>controlIds}.length > 0 ? true : false}" />
    </MessagePopover>
</core:FragmentDefinition>
